<Page loaded="onPageLoaded" >
<ActionBar title="Edit data">
  <NavigationButton text="Go Back" tap="goback" android.systemIcon="ic_menu_back"></NavigationButton>

</ActionBar>



<StackLayout orientation="vertical">
 <ScrollView class="page">
<StackLayout class="page form p-15">
    <Image id="pic" src="~/images/user-icon.png" class="img-circle"/>
      <GridLayout class="input-field input-sides" rows="auto, auto" columns="*,*">
          <Label text="คำนำหน้า" class="label font-weight-bold" row="0" col="0" />
          <TextField  text= "{{ perfix_id }}" hint="Input text" class="input right" row="0" col="1" />
          <StackLayout class="hr-light" row="1" colSpan="2"></StackLayout>
        </GridLayout>
         <GridLayout class="input-field input-sides" rows="auto, auto" columns="*,*">
          <Label text="ชื่อ" class="label font-weight-bold" row="0" col="0" />
          <TextField text="{{ stu_fname }}" hint="Input text" class="input right" row="0" col="1" />
          <StackLayout class="hr-light" row="1" colSpan="2"></StackLayout>
        </GridLayout>
         <GridLayout class="input-field input-sides" rows="auto, auto" columns="*,*">
          <Label text="นามสกุล" class="label font-weight-bold" row="0" col="0" />
          <TextField  text="{{ stu_lname }}" hint="Input text" class="input right" row="0" col="1" />
          <StackLayout class="hr-light" row="1" colSpan="2"></StackLayout>
        </GridLayout>
         <GridLayout class="input-field input-sides" rows="auto, auto" columns="*,*">
          <Label text="รหัสบัตรประชาชน" class="label font-weight-bold" row="0" col="0" />
          <TextField text="{{ people_id }}"  hint="Input text" class="input right" row="0" col="1" />
          <StackLayout class="hr-light" row="1" colSpan="2"></StackLayout>
        </GridLayout>
</StackLayout>
 </ScrollView>
